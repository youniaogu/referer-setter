{
  "manifest_version": 2,
  "name": "Referer_Setter",
  "version": "2.0",
  "browser_action": {
    "default_icon": "icon24.png",
    "default_popup": "index.html"
  },
  "icons": { 
    "24": "icon24.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "permissions": [
    "webRequest", 
    "webRequestBlocking", 
    "storage",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}